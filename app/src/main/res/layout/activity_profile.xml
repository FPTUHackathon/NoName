<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UsersActivity">
    <RelativeLayout
        android:id="@+id/profile_upper_layout"
        android:background="@drawable/images"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_margin="16dp"
            android:id="@+id/imv_icon_back"
            android:layout_alignParentTop="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit"
            android:layout_margin="16dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/imv_icon_more"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_below="@id/imv_avatar"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wiliam Snoe"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="21sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tvFriends"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/message_button"
                android:text="108 friends"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_margin="4dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_profile_following"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/message_button"
                android:text="25 followers"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_margin="4dp"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_upper_layout"
        android:id="@+id/card_profile_status"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_status"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="normal"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tv_profile_status"
                android:padding="3dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/card_profile_status"
        android:layout_marginTop="4dp"
        android:id="@+id/recycle_view_profile_info"/>

</RelativeLayout>