<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.noname.lover.fragment.OtherFragment"
    android:background="@color/background"
    >

   <android.support.v7.widget.CardView
       android:id="@+id/card_other_header"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@android:color/white"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imv_avatar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wiliam Snoe"
            android:id="@+id/tvName"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Your profile"
             android:layout_marginStart="16dp"
             android:textSize="12sp"
             />

        </LinearLayout>
    </LinearLayout>
   </android.support.v7.widget.CardView>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/card_other_header"
        android:id="@+id/spacer_other_layout"
        />
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spacer_other_layout"
        android:id="@+id/recycle_view_other_layout"
        android:scrollbars="none"
        />

</RelativeLayout>
